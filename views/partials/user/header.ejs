<body>
   <header class="header">
       <div class="container-head">
           <div class="row">
               <div class="col-lg-3 col-md-3">
                   <div class="header__logo">
                       <a href="#"><img class="logo" src="img/logo.png" alt=""></a>
                   </div>
               </div>
               <div class="col-lg-6 col-md-6">
                   <nav class="header__menu mobile-menu">
                       <ul>
                           <li class="active"><a href="/">Home</a></li>
                           <li id="shop" ><a  href="/shop">Shop</a></li>
                       </ul>
                   </nav>
               </div>
               <div class="col-lg-3 col-md-3">
                   <div class="header__nav__option">
                       <%if(user){%>
                           <div class="dropdown">
                               <a href="#" class="sign-in-link"><%= user.username %></a>
                               <div class="dropdown-content">


                                   <a href="/userProfile">Profile</a>
                                   <a href="/logout">Logout</a>


                               </div>


                           </div>
                       <%}else {%>


                       <a href="/signup" class="sign-in-link">Sign Up</a>
                       <a href="/login" class="sign-in-link">Log in</a>
                       <%}%>
                       <a href="/wishlist"><img src="img/icon/heart.png" alt=""></a>
                       <a href="/cart"><img src="img/icon/cart.png" alt=""> <span>0</span></a>
                   </div>
               </div>
           </div>
           <div class="canvas__open"><i class="fa fa-bars"></i></div>
       </div>
   </header>
      <script>
   // Wait until full page loaded
   window.addEventListener("DOMContentLoaded", function() {
      // Get current URL path
      const currentPath = window.location.pathname;

      // Get all menu list items
      const menuItems = document.querySelectorAll(".header__menu ul li");

      menuItems.forEach(li => {
         // Get the href of inside a tag
         const link = li.querySelector("a");

         if (link) {
            // Check if current path matches href
            if (link.getAttribute("href") === currentPath) {
               // Remove active from all first
               menuItems.forEach(item => item.classList.remove("active"));
               
               // Add active to current li
               li.classList.add("active");
            }
         }
      });
   });
</script>
