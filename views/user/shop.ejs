<%- include("../partials/user/header") %>

<style>
/* Modern E-commerce Styling */
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap');

.main-container {
  width: 100%;
  margin: 0 auto;
  padding: 0 20px;
  font-family: 'Poppins', sans-serif;
  background: #f8f9fa;
}

/* Breadcrumb Styling */
.breadcrumb {
    padding: 12px 0;
    font-size: 14px;
    color: #666;
}

.breadcrumb a {
    color: #1e90ff;
    text-decoration: none;
    transition: color 0.3s ease;
}

.breadcrumb a:hover {
    color: #1871cc;
}

.breadcrumb span {
    margin: 0 8px;
    color: #999;
}

.breadcrumb .current {
    color: #333;
    font-weight: 500;
}

/* Shop Topbar Styling */
.shop-topbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  background: #ffffff;
  padding: 12px 16px;
  border-radius: 12px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.search-form {
  display: flex;
  align-items: center;
  background: #f1f3f5;
  border-radius: 50px;
  max-width: 320px;
  transition: all 0.3s ease;
}

.search-input {
  flex: 1;
  padding: 10px 14px;
  font-size: 14px;
  border: none;
  outline: none;
  background: transparent;
  color: #333;
}

.search-button {
  padding: 10px 20px;
  background: #1e90ff;
  color: #fff;
  border: none;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  border-radius: 50px;
  transition: background 0.3s ease;
}

.search-button:hover {
  background: #1871cc;
}

.sort-select {
  padding: 10px 14px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  background: #fff;
  font-size: 14px;
  cursor: pointer;
  transition: border-color 0.3s ease;
}

.sort-select:focus {
  border-color: #1e90ff;
  outline: none;
}

/* Product List Container */
.product-list-container {
  display: flex;
  gap: 20px;
  margin-top: 10px;
}

/* Sidebar Styling */
.sidebar {
  width: 250px;
  padding: 16px;
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease;
}

.filter-section {
  margin-bottom: 16px;
}

.filter-title {
  font-size: 16px;
  font-weight: 600;
  color: #222;
  margin-bottom: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.filter-title::after {
  content: '';
  display: block;
  width: 30px;
  height: 2px;
  background: #1e90ff;
  margin-top: 6px;
  border-radius: 2px;
}

.category-brand-container ul {
  list-style: none;
  padding: 0;
}

.filter-item {
  margin: 6px 0;
}

.filter-item a {
  display: flex;
  align-items: center;
  padding: 8px 10px;
  color: #444;
  text-decoration: none;
  font-size: 14px;
  font-weight: 400;
  border-radius: 6px;
  transition: all 0.3s ease;
}

.filter-item a::before {
  content: '›';
  margin-right: 6px;
  color: #1e90ff;
  font-size: 14px;
}

.filter-item a:hover,
.filter-item a.active {
  background: #e6f0ff;
  color: #1e90ff;
}

.filter-item a:hover::before,
.filter-item a.active::before {
  color: #1e90ff;
}

.price-filter .price-options {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.price-button,
.reset-button {
  padding: 10px;
  background: #fff;
  color: #333;
  border: 1px solid #e0e0e0;
  border-radius: 50px;
  cursor: pointer;
  text-align: center;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.price-button:hover,
.price-button.active {
  background: #1e90ff;
  color: #fff;
  border-color: #1e90ff;
}

.reset-button {
  background: #ff4757;
  color: #fff;
  border: none;
  margin-top: 10px;
}

.reset-button:hover {
  background: #e03e4b;
}

/* Product Grid Styling */
.product-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  width: calc(100% - 270px);
  justify-content: flex-start;
}

.product-card {
  position: relative;
  background: #ffffff;
  border-radius: 12px;
  padding: 12px;
  text-align: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  height: 350px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

.product-card a {
  text-decoration: none;
}

.product-card img {
  max-width: 100%;
  height: 150px;
  object-fit: contain;
  border-radius: 6px;
  margin-bottom: 8px;
}

.product-card h4 {
  font-size: 14px;
  font-weight: 500;
  color: #222;
  margin: 6px 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.2;
}

.product-card h6 {
  font-size: 12px;
  font-weight: 400;
  color: #666;
  margin: 6px 0;
  line-height: 1.2;
}

.product-card p {
  font-size: 14px;
  font-weight: 500;
  color: #1e90ff;
  margin: 6px 0;
  line-height: 1.2;
}

.product-card p .text-muted {
  font-size: 12px;
  color: #999;
  margin-left: 5px;
}

.wishlist-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  background: #fff;
  color: #ff4757;
  padding: 6px;
  border-radius: 50%;
  cursor: pointer;
  border: 1px solid #e0e0e0;
  transition: all 0.3s ease;
}

.wishlist-btn:hover {
  background: #ff4757;
  color: #fff;
  border-color: #ff4757;
}

.add-to-cart-btn {
  background: #1e3a8a;
  color: #fff;
  padding: 8px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  width: 100%;
  font-size: 14px;
  font-weight: 500;
  transition: background 0.3s ease;
}

.add-to-cart-btn:hover {
  background: #102970;
}

/* Pagination Styling */
.pagination {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin: 16px 0;
}

.pagination a {
  padding: 8px 12px;
  background: #fff;
  border: 1px solid #e0e0e0;
  color: #333;
  text-decoration: none;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.pagination a:hover {
  background: #1e90ff;
  color: #fff;
  border-color: #1e90ff;
}

.pagination .active {
  background: #1e90ff;
  color: #fff;
  border-color: #1e90ff;
}

/* Sidebar Toggle */
.sidebar-toggle {
  display: none;
  padding: 10px;
  background: #1e90ff;
  color: #fff;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 14px;
  margin-bottom: 10px;
  width: 100%;
  text-align: center;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .product-list-container {
    flex-direction: column;
  }

  .sidebar {
    width: 100%;
    max-width: none;
  }

  .sidebar-toggle {
    display: block;
  }

  .sidebar {
    display: none;
  }

  .sidebar.active {
    display: block;
  }

  .product-grid {
    grid-template-columns: repeat(2, 1fr);
    width: 100%;
  }
}

@media (max-width: 768px) {
  .shop-topbar {
    flex-direction: column;
    gap: 12px;
  }

  .search-form {
    max-width: 100%;
  }

  .product-grid {
    grid-template-columns: 1fr;
  }

  .product-card {
    height: 320px;
  }
}

@media (max-width: 480px) {
  .product-grid {
    grid-template-columns: 1fr;
  }

  .product-card {
    height: 300px;
  }
}
</style>

<div class="main-container">
  <section class="shop-page container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb py-2" aria-label="Breadcrumb">
      <a href="/">Home</a>
      <span>></span>
      <a href="/shop">Shop</a>
      <% if (categoryf && categoryf !== 'all') { %>
        <span>></span>
        <% category.forEach(item => { %>
          <% if (item._id.toString() === categoryf) { %>
            <a href="/shop?categoryf=<%= item._id %>&search=<%= search || '' %>&sort=<%= sort || '' %>&brandf=<%= brandf || '' %>&priceRange=<%= priceRange || '' %>">
              <%= item.name %>
            </a>
          <% } %>
        <% }) %>
      <% } %>
      <% if (brandf && brandf !== 'all') { %>
        <span>></span>
        <% brand.forEach(item => { %>
          <% if (item._id.toString() === brandf) { %>
            <span class="current"><%= item.BrandName %></span>
          <% } %>
        <% }) %>
      <% } else if (categoryf && categoryf !== 'all' && (!brandf || brandf === 'all')) { %>
        <span class="current" style="display: none;"></span>
      <% } else { %>
        <span class="current" style="display: none;"></span>
      <% } %>
    </nav>

    <div class="shop-topbar">
      <div class="search-bar">
        <form action="/shop" method="GET" class="search-form">
          <input type="text" name="search" placeholder="Search products..." class="search-input" value="<%= search || '' %>" aria-label="Search products" />
          <button type="submit" class="search-button" aria-label="Search products">Search</button>
        </form>
      </div>
      <select name="sort" class="sort-select" onchange="this.form.submit()" form="sort-form">
        <option value="" <%= sort === '' ? 'selected' : '' %>>Default (Newest)</option>
        <option value="A-Z" <%= sort === 'A-Z' ? 'selected' : '' %>>A to Z</option>
        <option value="Z-A" <%= sort === 'Z-A' ? 'selected' : '' %>>Z to A</option>
        <option value="Price : low - high" <%= sort === 'Price : low - high' ? 'selected' : '' %>>Price: Low to High</option>
        <option value="Price : high - low" <%= sort === 'Price : high - low' ? 'selected' : '' %>>Price: High to Low</option>
      </select>
      <form id="sort-form" method="GET" style="display: none;">
        <input type="hidden" name="search" value="<%= search || '' %>" />
        <input type="hidden" name="categoryf" value="<%= categoryf || '' %>" />
        <input type="hidden" name="brandf" value="<%= brandf || '' %>" />
        <input type="hidden" name="priceRange" value="<%= priceRange || '' %>" />
      </form>
    </div>

    <div class="product-list-container">
      <button class="sidebar-toggle" onclick="toggleSidebar()">☰ Filters</button>
      <aside class="sidebar" id="sidebar">
        <div class="filter-section">
          <div class="filter-title">Categories</div>
          <div class="category-brand-container">
            <ul>
              <% if (category && category.length > 0) { %>
                <li class="filter-item">
                  <a href="/shop?categoryf=all&search=<%= search || '' %>&sort=<%= sort || '' %>&brandf=<%= brandf || '' %>&priceRange=<%= priceRange || '' %>"
                     class="<%= !categoryf || categoryf === 'all' ? 'active' : '' %>">
                    All Categories
                  </a>
                </li>
                <% category.forEach(item => { %>
                  <li class="filter-item">
                    <a href="/shop?categoryf=<%= item._id %>&search=<%= search || '' %>&sort=<%= sort || '' %>&brandf=<%= brandf || '' %>&priceRange=<%= priceRange || '' %>"
                       class="<%= categoryf === item._id.toString() ? 'active' : '' %>">
                      <%= item.name %>
                    </a>
                  </li>
                <% }) %>
              <% } else { %>
                <li>No categories available</li>
              <% } %>
            </ul>
          </div>
        </div>

        <div class="filter-section">
          <div class="filter-title">Brands</div>
          <div class="category-brand-container">
            <ul>
              <li class="filter-item">
                <a href="/shop?categoryf=<%= categoryf || '' %>&search=<%= search || '' %>&sort=<%= sort || '' %>&brandf=all&priceRange=<%= priceRange || '' %>"
                   class="<%= !brandf || brandf === 'all' ? 'active' : '' %>">
                  All Brands
                </a>
              </li>
              <% if (brand && brand.length > 0) { %>
                <% brand.forEach(item => { %>
                  <li class="filter-item">
                    <a href="/shop?brandf=<%= item._id %>&search=<%= search || '' %>&sort=<%= sort || '' %>&categoryf=<%= categoryf || '' %>&priceRange=<%= priceRange || '' %>"
                       class="<%= brandf === item._id.toString() ? 'active' : '' %>">
                      <%= item.BrandName %>
                    </a>
                  </li>
                <% }) %>
              <% } else { %>
                <li>No brands available</li>
              <% } %>
            </ul>
          </div>
        </div>

        <div class="price-filter">
          <div class="filter-title">Price Range</div>
          <div class="price-options">
            <a href="/shop?priceRange=under500&search=<%= search || '' %>&sort=<%= sort || '' %>&categoryf=<%= categoryf || '' %>&brandf=<%= brandf || '' %>">
              <button type="button" class="price-button <%= priceRange === 'under500' ? 'active' : '' %>">Under ₹500</button>
            </a>
            <a href="/shop?priceRange=500-1000&search=<%= search || '' %>&sort=<%= sort || '' %>&categoryf=<%= categoryf || '' %>&brandf=<%= brandf || '' %>">
              <button type="button" class="price-button <%= priceRange === '500-1000' ? 'active' : '' %>">₹500 - ₹1000</button>
            </a>
            <a href="/shop?priceRange=1000-1500&search=<%= search || '' %>&sort=<%= sort || '' %>&categoryf=<%= categoryf || '' %>&brandf=<%= brandf || '' %>">
              <button type="button" class="price-button <%= priceRange === '1000-1500' ? 'active' : '' %>">₹1000 - ₹1500</button>
            </a>
            <a href="/shop?priceRange=above1500&search=<%= search || '' %>&sort=<%= sort || '' %>&categoryf=<%= categoryf || '' %>&brandf=<%= brandf || '' %>">
              <button type="button" class="price-button <%= priceRange === 'above1500' ? 'active' : '' %>">Above ₹1500</button>
            </a>
            <a href="/shop?search=<%= search || '' %>&sort=<%= sort || '' %>">
              <button type="button" class="reset-button">
                Reset Filters <%= (categoryf || brandf || priceRange) ? `(${[categoryf && categoryf !== 'all', brandf && brandf !== 'all', priceRange].filter(Boolean).length})` : '' %>
              </button>
            </a>
          </div>
        </div>
      </aside>

      <main class="product-grid">
        <% if (products && products.length > 0) { %>
          <% products.forEach(product => { %>
            <div class="product-card">
              <span class="wishlist-btn" onclick="addToWishlist('<%= product._id %>')" aria-label="Add to wishlist">❤️</span>
              <a href="/product/<%= product._id %>">
                <img src="<%= product.productImage[0] || '/images/placeholder.jpg' %>" alt="<%= product.productName || 'Product Image' %>" />
                <h4><%= product.productName %></h4>
                <h6><%= product.brand ? product.brand.BrandName : 'Unknown Brand' %></h6>
                <p>
                  <% if (product.finalOffer) { %>
                    ₹<%= product.discountedPrice.toLocaleString("en-IN", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                    <span class="text-muted">
                      <strike>₹<%= product.salePrice.toLocaleString("en-IN", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></strike>
                    </span>
                    <span style="color: #ff4444; font-weight: 600;">
                      <%= product.finalOffer.discountAmount %>% OFF
                    </span>
                  <% } else { %>
                    ₹<%= product.salePrice.toLocaleString("en-IN", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                    <span class="text-muted">
                      <strike>₹<%= product.regularPrice.toLocaleString("en-IN", { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></strike>
                    </span>
                  <% } %>
                </p>
              </a>
              <button class="add-to-cart-btn" onclick="addToCart('<%= product._id %>')">Add to Cart</button>
            </div>
          <% }) %>
        <% } else { %>
          <p style="text-align: center; color: #666;">No products found for the selected filters. Try adjusting your filters.</p>
        <% } %>
      </main>
    </div>

    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a href="/shop?page=<%= currentPage - 1 %>&search=<%= search || '' %>&sort=<%= sort || '' %>&categoryf=<%= categoryf || '' %>&brandf=<%= brandf || '' %>&priceRange=<%= priceRange || '' %>">Previous</a>
      <% } %>
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a class="<%= currentPage === i ? 'active' : '' %>" href="/shop?page=<%= i %>&search=<%= search || '' %>&sort=<%= sort || '' %>&categoryf=<%= categoryf || '' %>&brandf=<%= brandf || '' %>&priceRange=<%= priceRange || '' %>"><%= i %></a>
      <% } %>
      <% if (currentPage < totalPages) { %>
        <a href="/shop?page=<%= currentPage + 1 %>&search=<%= search || '' %>&sort=<%= sort || '' %>&categoryf=<%= categoryf || '' %>&brandf=<%= brandf || '' %>&priceRange=<%= priceRange || '' %>">Next</a>
      <% } %>
    </div>

    <% if (message) { %>
      <p style="color: #ff4757; text-align: center; margin-top: 10px;"><%= message %></p>
    <% } %>
  </section>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
function toggleSidebar() {
  document.getElementById('sidebar').classList.toggle('active');
}

async function addToCart(productId) {
  try {
    const response = await fetch('/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productId }),
    });
    const data = await response.json();
    if (response.ok) {
      Swal.fire({
        title: 'Success!',
        text: data.message,
        icon: 'success',
        confirmButtonText: 'Go to Cart',
        showCancelButton: true,
        cancelButtonText: 'Continue Shopping',
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = '/cart';
        }
      });
    } else {
      Swal.fire({
        title: 'Error!',
        text: data.message,
        icon: 'error',
        confirmButtonText: 'OK',
      });
    }
  } catch (error) {
    Swal.fire({
      title: 'Error!',
      text: 'Error adding to cart. Please try again.',
      icon: 'error',
      confirmButtonText: 'OK',
    });
  }
}

async function addToWishlist(productId) {
  try {
    const response = await fetch('/wishlist/add', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ productId }),
    });
    const data = await response.json();
    if (response.ok) {
      Swal.fire({
        title: 'Success!',
        text: 'Product added to wishlist',
        icon: 'success',
        confirmButtonText: 'OK',
      });
    } else {
      Swal.fire({
        title: 'Error!',
        text: data.message,
        icon: 'error',
        confirmButtonText: 'OK',
      });
    }
  } catch (error) {
    Swal.fire({
      title: 'Error!',
      text: 'Error adding to wishlist in shop. Please try again.',
      icon: 'error',
      confirmButtonText: 'OK',
    });
  }
}
</script>

<%- include("../partials/user/footer") %>