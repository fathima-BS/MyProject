<%- include("../../views/partials/user/header") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
<link rel="stylesheet" href="/css/style.css">

<style>
  /* Custom Button Styles */
  .btn {
      display: inline-block;
      padding: 12px 20px;
      font-size: 16px;
      font-weight: bold;
      color: #fff;
      background-color: #ff6b6b;
      border: none;
      border-radius: 5px;
      transition: background-color 0.3s, transform 0.3s;
      cursor: pointer;
      text-align: center;
  }

  .btn:hover {
      background-color: #ff4c4c;
      transform: translateY(-2px);
  }

  .btn:active {
      transform: translateY(1px);
  }

  /* Wishlist Button Styles */
  .wishlist-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: rgba(255, 255, 255, 0.8);
      padding: 10px;
      border-radius: 50%;
      color: #ff6b6b;
      font-size: 18px;
      z-index: 10;
      transition: background-color 0.3s, color 0.3s, transform 0.3s;
  }

  .wishlist-btn:hover {
      background-color: rgba(255, 255, 255, 1);
      color: #ff4c4c;
      transform: translateY(-2px);
  }

  .wishlist-btn:active {
      transform: translateY(1px);
  }

  /* Product Styles */
  .product-img-action-wrap {
      position: relative;
  }

  .product-img {
      position: relative;
      display: block;
      overflow: hidden;
      height: 250px;
  }
  
  .product-img img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s;
  }
  
  .product-img:hover img {
      transform: scale(1.05);
  }

  .product-cart-wrap {
      border: 1px solid #eee;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 30px;
      transition: box-shadow 0.3s;
      height: 100%;
  }
  
  .product-cart-wrap:hover {
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .product-content-wrap {
      padding-top: 15px;
  }

  .product-content-wrap h6 {
      font-size: 18px;
      color: #333;
      margin-bottom: 5px;
      font-weight: 600;
  }
  
  .product-content-wrap p {
      color: #777;
      margin-bottom: 8px;
      font-size: 14px;
  }

  .product-content-wrap h5 {
      font-size: 18px;
      color: #ff6b6b;
      margin-bottom: 15px;
      font-weight: 700;
  }

  .product-content-wrap a {
      display: inline-block;
      padding: 8px 12px;
      background-color: #ff6b6b;
      color: white;
      text-transform: uppercase;
      font-size: 14px;
      border-radius: 4px;
      text-decoration: none;
      transition: all 0.3s;
  }

  .product-content-wrap a:hover {
      background-color: #ff4c4c;
      transform: translateY(-2px);
  }

  /* Hero Section Styling */
  .hero {
      position: relative;
      width: 100%;
      margin-bottom: 40px;
  }

  .hero__slider {
      width: 100%;
  }

  .hero__slider .owl-item {
      height: 100%;
  }

  .hero__slider .owl-item.active .hero__text h6 {
      top: 0;
      opacity: 1;
  }

  .hero__slider .owl-item.active .hero__text h2 {
      top: 0;
      opacity: 1;
  }

  .hero__slider .owl-item.active .hero__text p {
      top: 0;
      opacity: 1;
  }

  .hero__slider .owl-item.active .hero__text .primary-btn {
      top: 0;
      opacity: 1;
  }

  .hero__slider .owl-nav button {
      font-size: 24px;
      color: #fff;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      margin-top: 0;
      background: rgba(0, 0, 0, 0.3);
      border-radius: 50%;
      width: 40px;
      height: 40px;
      text-align: center;
      transition: background 0.3s;
      z-index: 10;
  }

  .hero__slider .owl-nav button:hover {
      background: rgba(255, 107, 107, 0.7);
  }

  .hero__slider .owl-nav button.owl-prev {
      left: 20px;
  }

  .hero__slider .owl-nav button.owl-next {
      right: 20px;
  }

  .hero__items {
      height: 600px;
      width: 100%;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      position: relative;
  }

  .hero__text {
      position: relative;
      top: 50%;
      transform: translateY(0%);
      color: #ffffff;
      padding: 10px 20px;
      max-width: 600px;
  }

  .hero__text h6 {
      color: #e53637;
      font-size: 14px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 10px;
      opacity: 0;
      transition: all 0.3s ease;
  }

  .hero__text h2 {
      color: #000000;
      font-size: 48px;
      font-weight: 700;
      line-height: 1.2;
      margin-bottom: 15px;
      opacity: 0;
      transition: all 0.6s ease;
  }

  .hero__text p {
      font-size: 18px;
      line-height: 1.6;
      margin-bottom: 25px;
      opacity: 0;
      transition: all 0.9s ease;
      color: #000000;
  }

  .hero__text .primary-btn {
      opacity: 0;
      transition: all 1.1s ease;
  }

  .primary-btn {
      display: inline-block;
      padding: 12px 30px;
      font-size: 16px;
      color: #fff;
      background-color: #ff6b6b;
      border-radius: 25px;
      text-decoration: none;
      transition: background-color 0.3s;
  }

  .primary-btn:hover {
      background-color: #ff4c4c;
  }

  /* Banner Section Styling */
  .banner {
      padding: 0px 0;
  }

  .banner__item {
      margin-bottom: 30px;
      position: relative;
      overflow: hidden;
      border-radius: 12px;
  }

  .banner__item__pic img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      transition: transform 0.3s;
  }

  .banner__item:hover .banner__item__pic img {
      transform: scale(1.1);
  }

  .banner__item__text {
      position: absolute;
      bottom: 20px;
      left: 20px;
      color: #fff;
  }

  .banner__item__text h2 {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 10px;
  }

  .banner__item__text a {
      color: #fff;
      text-decoration: underline;
      font-size: 14px;
  }

  .banner__item__text a:hover {
      color: #ff6b6b;
  }

  /* Product Section Styling */
  .product {
      padding: 60px 0;
  }
  
  .section-title {
      margin-bottom: 30px;
      text-align: center;
  }
  
  .section-title h2 {
      font-size: 32px;
      font-weight: 700;
      position: relative;
      display: inline-block;
      margin-bottom: 15px;
  }
  
  .section-title h2:after {
      content: '';
      position: absolute;
      left: 50%;
      bottom: -10px;
      width: 50px;
      height: 3px;
      background: #ff6b6b;
      transform: translateX(-50%);
  }

  /* Filter Controls */
  .filter__controls {
      display: flex;
      list-style: none;
      padding: 0;
      margin-bottom: 30px;
      justify-content: center;
  }

  .filter__controls li {
      padding: 10px 20px;
      margin: 0 10px;
      background-color: #f1f1f1;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s;
      font-weight: 600;
  }

  .filter__controls li:hover,
  .filter__controls li.active {
      background-color: #ff6b6b;
      color: #fff;
  }
  
  .product__filter {
      display: flex;
      flex-wrap: wrap;
      margin: 0 -15px;
  }

  /* No products message */
  .no-products {
      text-align: center;
      padding: 50px 0;
      width: 100%;
  }
  
  .no-products h3 {
      color: #777;
      font-size: 20px;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
      .hero__items {
          height: 500px;
      }

      .hero__text {
          max-width: 500px;
          padding: 10px 15px;
      }

      .hero__text h2 {
          font-size: 36px;
      }

      .banner__item__pic img {
          height: 250px;
      }
  }

  @media (max-width: 768px) {
      .hero__items {
          height: 400px;
      }

      .hero__text {
          max-width: 400px;
          padding: 5px 10px;
      }

      .hero__text h2 {
          font-size: 28px;
      }

      .banner__item__pic img {
          height: 200px;
      }
      
      .filter__controls {
          flex-wrap: wrap;
          justify-content: center;
      }
      
      .filter__controls li {
          margin-bottom: 10px;
      }
  }

  @media (max-width: 480px) {
      .hero__items {
          height: 300px;
      }

      .hero__text {
          max-width: 90%;
          padding: 5px;
      }

      .hero__text h2 {
          font-size: 24px;
      }

      .hero__text p {
          font-size: 16px;
      }

      .banner__item__pic img {
          height: 150px;
      }
  }
</style>

