<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11?v=20250609"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js?v=20250609"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js?v=20250609"></script>
<script>
    $(document).ready(function() {
        // Hero slider initialization
        $('.hero__slider').owlCarousel({
            items: 1,
            loop: true,
            autoplay: true,
            autoplayTimeout: 5000,
            autoplayHoverPause: true,
            dots: true,
            nav: true,
            navText: ['<i class="fas fa-chevron-left"></i>', '<i class="fas fa-chevron-right"></i>'],
            animateOut: 'fadeOut'
        });

        // Handle set-bg dynamically
        $('.set-bg').each(function() {
            var bg = $(this).attr('data-setbg');
            if (bg) {
                $(this).css({
                    'background-image': 'url(' + bg + ')',
                    'background-size': 'cover',
                    'background-position': 'center'
                });
            } else {
                $(this).css('background-color', '#f1f1f1');
            }
        });
        
        // Filter controls functionality
        $('.filter__controls li').on('click', function() {
            $('.filter__controls li').removeClass('active');
            $(this).addClass('active');
            
            var filter = $(this).attr('data-filter');
            
            if (filter === '*') {
                $('.product__filter .col-lg-4').show();
            } else {
                $('.product__filter .col-lg-4').hide();
                $('.product__filter').find(filter).show();
            }
        });
    });

    // Toggle product in wishlist (add or remove)
    async function toggleWishlist(productId, buttonElement) {
        const button = $(buttonElement);
        const heartIcon = button.find('i');
        const isWishlisted = heartIcon.hasClass('fas');

        // Ensure button remains visible
        button.css({ visibility: 'visible', opacity: 1 });
        button.addClass('loading');

        try {
            const endpoint = isWishlisted ? '/wishlist/remove' : '/wishlist/add';
            const response = await fetch(endpoint, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                credentials: 'same-origin',
                body: JSON.stringify({ productId })
            });

            const data = await response.json();
            if (response.ok && data.success) {
                // Toggle heart icon
                heartIcon.removeClass('far fas').addClass(isWishlisted ? 'far' : 'fas');
                button.css({ visibility: 'visible', opacity: 1 });
                Swal.fire({
                    title: 'Success!',
                    text: data.message,
                    icon: 'success',
                    confirmButtonText: 'OK',
                    timer: 1500,
                    showConfirmButton: false
                });
                // Update all instances of this product across the page
                $(`.wishlist-btn[data-product-id="${productId}"]`).each(function() {
                    const icon = $(this).find('i');
                    icon.removeClass('far fas').addClass(isWishlisted ? 'far' : 'fas');
                    $(this).css({ visibility: 'visible', opacity: 1 });
                });
            } else if (!data.success && data.message.includes('is already in your wishlist')) {
                // Product already in wishlist; maintain filled heart icon
                heartIcon.removeClass('far fas').addClass('fas');
                button.css({ visibility: 'visible', opacity: 1 });
                // Update all instances to filled heart
                $(`.wishlist-btn[data-product-id="${productId}"]`).each(function() {
                    const icon = $(this).find('i');
                    icon.removeClass('far fas').addClass('fas');
                    $(this).css({ visibility: 'visible', opacity: 1 });
                });
                // Optionally, skip the alert or show a neutral message
            } else if (!data.success && data.message === 'Please log in to add items to the wishlist') {
                Swal.fire({
                    title: 'Login Required',
                    text: 'Please log in to update your wishlist.',
                    icon: 'warning',
                    confirmButtonText: 'Log In',
                    showCancelButton: true,
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/login';
                    }
                });
            } else {
                throw new Error(data.message || 'Error updating wishlist');
            }
        } catch (error) {
            console.error('Error toggling wishlist:', error);
            Swal.fire({
                title: 'Error!',
                text: error.message || 'Error updating wishlist. Please try again.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        } finally {
            // Remove loading state and ensure visibility
            button.removeClass('loading');
            button.css({ visibility: 'visible', opacity: 1 });
        }
    }

    // Add to cart
    async function addToCart(productId) {
        try {
            const response = await fetch('/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                credentials: 'same-origin',
                body: JSON.stringify({ productId }),
            });
            const data = await response.json();
            if (response.ok && data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: data.message,
                    icon: 'success',
                    confirmButtonText: 'Go to Cart',
                    showCancelButton: true,
                    cancelButtonText: 'Continue Shopping',
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/cart';
                    }
                });
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: data.message || 'Error adding to cart',
                    icon: 'error',
                    confirmButtonText: 'OK',
                });
            }
        } catch (error) {
            console.error('Error adding to cart:', error);
            Swal.fire({
                title: 'Error!',
                text: 'Error adding to cart. Please try again.',
                icon: 'error',
                confirmButtonText: 'OK',
            });
        }
    }
</script>