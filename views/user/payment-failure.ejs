<%- include("../partials/user/header") %>
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f7fafc;
        margin: 0;
        padding: 0;
    }
    .failure-container {
        max-width: 600px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 0.75rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    .failure-icon {
        font-size: 4rem;
        color: #ef4444;
        margin-bottom: 1.5rem;
    }
    .failure-title {
        font-size: 1.875rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 1rem;
    }
    .failure-message {
        font-size: 1.125rem;
        color: #4b5563;
        margin-bottom: 2rem;
        line-height: 1.6;
    }
    .action-btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.375rem;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease, transform 0.2s ease;
        margin: 0.5rem;
    }
    .action-btn:hover {
        transform: translateY(-1px);
    }
    .retry-btn {
        background-color: #2563eb;
        color: #ffffff;
    }
    .retry-btn:hover {
        background-color: #1d4ed8;
    }
    .view-order-btn {
        background-color: #6b7280;
        color: #ffffff;
    }
    .view-order-btn:hover {
        background-color: #4b5563;
    }
    .support-link {
        color: #2563eb;
        font-size: 0.875rem;
        text-decoration: underline;
        display: block;
        margin-top: 1.5rem;
        transition: color 0.2s ease;
    }
    .support-link:hover {
        color: #1d4ed8;
    }
    .branding {
        font-size: 0.875rem;
        color: #6b7280;
        margin-top: 2rem;
    }
    @media (max-width: 640px) {
        .failure-container {
            margin: 1.5rem;
            padding: 1.5rem;
        }
        .failure-title {
            font-size: 1.5rem;
        }
        .failure-message {
            font-size: 1rem;
        }
        .action-btn {
            width: 100%;
            margin: 0.5rem 0;
        }
    }
</style>

<div class="container mx-auto px-4">
    <div class="failure-container">
        <div class="failure-icon">âœ—</div>
        <h1 class="failure-title">Payment Failed</h1>
        <p class="failure-message">
            <% if (error) { %>
                <%= error %>
            <% } else { %>
                We're sorry, but your payment could not be processed. Please try again with another payment method or contact support for assistance.
            <% } %>
        </p>
        <div>
            <% if (orderId) { %>
            <a href="/order-details/<%= orderId %>" class="action-btn retry-btn">Retry Payment</a>
            <% } %>
        </div>
        <p class="branding">Cario &copy; <%= new Date().getFullYear() %></p>
    </div>
</div>

<%- include("../partials/user/footer") %>